{
    "name": "2048",
    "id": "2048",
    "packaging_format": 1,
    "description": {
        "en": "2048 game",
        "fr": "jeu 2048"
    },
    "url": "https://github.com/gabrielecirulli/2048",
    "version": "1.0~ynh1",
    "license": "MIT",
    "maintainer": {
        "name": "Moul",
        "email": "moul@moul.re"
    },
    "requirements": {
        "yunohost": ">= 3.7.0"
    },
    "multi_instance": true,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain for 2048",
                    "fr": "Choisissez un nom de domaine pour 2048"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for 2048",
                    "fr": "Choisissez un chemin pour 2048"
                },
                "example": "/2048",
                "default": "/2048"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                 "help": {
                        "en": "This app will be accesible by everybody.",
                        "fr": "Cette app sera accessible à tout le monde."
                },
                 "help": {
                        "en": "If enabled, 2048 will be accessible by people who doesn’t have an account. This can be changed later via the webadmin.",
                        "fr": "Si cette case est cochée, 2048 sera accessible aux personnes n’ayant pas de compte. Vous pourrez changer ceci plus tard via la webadmin."
                },
                "default": true
            }
        ]
    }
}
